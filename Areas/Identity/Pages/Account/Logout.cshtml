@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css">
    <!-- endinject -->
    <link rel="stylesheet" href="~/css/Dashboard/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-center py-5 px-4 px-sm-5">
                            <div class="brand-logo mb-4">
                                <img src="~/images/logo.svg" alt="logo" class="mb-3" style="max-width: 120px;">
                            </div>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <div class="mb-4">
                                    <i class="mdi mdi-logout text-primary" style="font-size: 4rem;"></i>
                                </div>
                                <h3 class="mb-3">Ready to Leave?</h3>
                                <p class="text-muted mb-4">
                                    Are you sure you want to log out?
                                </p>
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg fw-medium auth-form-btn">
                                        Confirm Logout
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="mb-4">
                                    <i class="mdi mdi-logout-variant text-success" style="font-size: 4rem;"></i>
                                </div>
                                <h3 class="mb-3">Logged Out Successfully</h3>
                                <p class="text-muted mb-4">
                                    You have been securely logged out of the application.
                                </p>
                                <a href="./Login" class="btn btn-block btn-primary btn-lg fw-medium auth-form-btn">
                                    <i class="mdi mdi-arrow-left me-2"></i> Back to Login
                                </a>
                            }

                            <div class="mt-3">
                                <a href="/" class="text-primary">Return to Homepage</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}